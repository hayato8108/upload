Sub CheckDFR3DB()
Application.ScreenUpdating = False
Dim oWbDB As Workbook
Dim oWbTABLE As Workbook

Set oWbDB = Workbooks.Add
Call CreateDFR3DBBook(oWbDB)

Stop
Set oWbDB = Workbooks("Book24")
'call CreateDFR3DBBook (oWbDB)

Stop
Set oWbTABLE = Workbooks.Add
Call CreateDFR3DBTable(oWbDB, oWbDB)

Application.ScreenUpdating = True
End Sub


